<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="submit_dpthead_process_view" model="ir.ui.view">
        <field name="name">submit.dpthead.process form</field>
        <field name="model">submit.dpthead.process</field>
        <field name="arch" type="xml">
            <form string="Submit Recruitment">
                <group>
                    <group>
                        <field name="recruitment_id" invisible="1"/>
                        <field name="responsible_dpthead" widget="many2many_tags" options="{'no_create': True}" domain="[('share', '=', False)]"/>
                    </group>
                </group>
                <footer>
                    <button string="Send" name="submit_dpthead" type="object" default_focus="1"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_submit_dpthead_process" model="ir.actions.act_window">
        <field name="name">Submit To Manager</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">submit.dpthead.process</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="submit_dpthead_process_view"/>
        <field name="target">new</field>
    </record>
</odoo>
